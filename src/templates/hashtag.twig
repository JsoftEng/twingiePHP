{% include 'header.twig' %}

{%  if data is defined %}<pre>{{ data }}</pre>{%  endif %}

<form action="{{ app.request.baseUrl ~ '/hashtag' }}" method="get" class="form-horizontal" enctype="multipart/form-data">
  <div class="control-group">
    <label class="control-label" for="criteria">Parameter</label>
    <div class="controls">
      <input type="text" name="criteria" id="criteria" class="input-xxlarge" maxlength="63">
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary"><b class="icon-ok icon-white"></b> Submit Request</button>
      <a href="{{ app.request.baseUrl ~ '/' }}" class="btn"><b class="icon-chevron-left"></b> Go Back</a>
    </div>
  </div>
</form>

{% include 'footer.twig' %}
