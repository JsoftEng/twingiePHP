{% include 'header.twig' %}

<p><a href="{{ app.request.baseUrl ~ '/hashtag' }}" class="btn"><b class="icon-pencil"></b> Hashtag Search</a></p>
<p><a href="{{ app.request.baseUrl ~ '/user' }}" class="btn"><b class="icon-pencil"></b> User Search</a></p>

<div class="hero-unit">
    <div class="row-fluid">
      {% if (hashtagAnalytics is defined) %}
        {%  for entity in hashtagAnalytics %}
            <blockquote>
                <p>{{ entity.analyticsText }}</p>
                <small>{{ entity.hashtag }}</small>
            </blockquote>
            <hr>
        {%  endfor %}
      {%  endif %}
	  
	  {% if (userAnalytics is defined) %}
        {%  for entity in userAnalytics %}
            <blockquote>
                <p>{{ entity.analyticsText }}</p>
                <small>{{ entity.user }}</small>
            </blockquote>
            <hr>
        {%  endfor %}
      {%  endif %}
    </div>
</div>

{% include 'footer.twig' %}
